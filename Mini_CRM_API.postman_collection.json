{
  "info": {
    "_postman_id": "mini-crm-api-collection",
    "name": "Mini CRM API",
    "description": "Complete API collection for Mini CRM system with JWT authentication",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{access_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000/api",
      "type": "string"
    },
    {
      "key": "access_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "refresh_token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Obtain Token Pair",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('access_token', jsonData.access);",
                  "    pm.collectionVariables.set('refresh_token', jsonData.refresh);",
                  "    pm.environment.set('access_token', jsonData.access);",
                  "    pm.environment.set('refresh_token', jsonData.refresh);",
                  "    console.log('Tokens saved successfully');",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"admin\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/token/",
              "host": ["{{base_url}}"],
              "path": ["token", ""]
            },
            "description": "Authenticate and receive access and refresh tokens. Tokens are automatically saved to collection variables."
          },
          "response": []
        },
        {
          "name": "Refresh Access Token",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('access_token', jsonData.access);",
                  "    pm.environment.set('access_token', jsonData.access);",
                  "    if (jsonData.refresh) {",
                  "        pm.collectionVariables.set('refresh_token', jsonData.refresh);",
                  "        pm.environment.set('refresh_token', jsonData.refresh);",
                  "    }",
                  "    console.log('Token refreshed successfully');",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refresh\": \"{{refresh_token}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/token/refresh/",
              "host": ["{{base_url}}"],
              "path": ["token", "refresh", ""]
            },
            "description": "Get a new access token using the refresh token. New tokens are automatically saved."
          },
          "response": []
        }
      ],
      "description": "Authentication endpoints for JWT token management"
    },
